<!-- meta tags bring in support for mobile browsers so bootstrap shows up properly on phone screens -->
<meta name="viewport" content="width=device-width, initial-scale=1 ">
<meta name="HandheldFriendly" content="true">

<!-- Changed navbar from fixed to static. Was overlapping with body of page -->
<header class="navbar navbar-static-top navbar-inverse">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header ">
      <!-- When collapsed, makes a dropdown with hamburger button -->
      <button type="button" class="navbar-toggle collapsed pull-left" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Kwikr", root_path, id: "logo" %>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="navbar-collapse-1">
      <nav>
        <!-- modified to show active links. Check _header.html.erb.txt for old code if needed -->
        <ul class="nav navbar-nav navbar-right">
          <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
          <li class="<%= 'active' if current_page?(help_path) %>"><%= link_to "Help", help_path %></li>
          <li class="<%= 'active' if current_page?('#') %>"><%= link_to "Log in", '#' %></li>
        </ul>
      </nav>
    </div><!-- /.navbar-collapse -->
  </div>
</header>

